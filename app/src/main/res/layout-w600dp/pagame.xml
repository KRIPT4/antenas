<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <Button
        android:text="@string/pagame_boton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:id="@+id/boton_comprar"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_below="@+id/label_pagame"
        android:layout_centerInParent="true"
        />

    <TextView
        android:text="@string/pagame_saludo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/label_hi"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:layout_alignTop="@+id/label_pagame"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"/>

    <TextView
        android:text="@string/pagame_texto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:id="@+id/label_pagame"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/label_hi"
        android:layout_toEndOf="@+id/label_hi"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:lineSpacingMultiplier="1.2"
        android:textSize="18sp"
        />

    <ImageView
        android:id="@+id/pagame_carita"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:srcCompat="@drawable/ic_emoji_u1f603"
        android:layout_below="@+id/boton_comprar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="44dp"
        android:layout_marginBottom="32dp"
        android:contentDescription="@null"
        />

    <TextView
        android:id="@+id/label_pagame_gracias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pagame_gracias"
        android:layout_alignBottom="@+id/pagame_carita"
        android:layout_toLeftOf="@+id/pagame_carita"
        android:layout_toStartOf="@+id/pagame_carita"
        android:layout_marginRight="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        />
</RelativeLayout>