<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    tools:ignore="Overdraw">

    <LinearLayout
        android:id="@+id/texto_antena"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/flecha"
        android:layout_toStartOf="@+id/flecha"
        android:orientation="vertical">

        <TextView
            android:id="@+id/antena_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:textColor="#ffff"
            android:textSize="25sp"
            tools:ignore="UnusedAttribute"/>

        <TextView
            android:id="@+id/antena_dist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#fddd"/>
    </LinearLayout>

    <ar.com.lichtmaier.antenas.FlechaView
        android:id="@+id/flecha"
        android:layout_width="@dimen/tam_flecha"
        android:layout_height="@dimen/tam_flecha"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"/>

</RelativeLayout>