<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:paddingTop="6dp"
		android:paddingBottom="4dp"
		android:paddingLeft="2dp"
		android:paddingRight="2dp"
		android:background="?selectableItemBackground">

	<ImageView
		android:layout_width="?ladoIconoCanal"
		android:layout_height="?ladoIconoCanal"
		android:scaleType="centerInside"
		android:id="@+id/imagen_canal"
		android:layout_alignParentTop="true"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		tools:ignore="ContentDescription"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="@style/TextAppearance.AppCompat"
		android:textSize="18sp"
		tools:text="WPNYX-TV"
		android:id="@+id/nombre_canal"
		android:layout_alignParentTop="true"
		android:layout_toRightOf="@+id/imagen_canal"
		android:layout_toEndOf="@+id/imagen_canal"
		android:layout_marginLeft="8dp"
		android:layout_marginStart="8dp"
		android:textColor="@android:color/white"
		/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="@style/TextAppearance.AppCompat"
		android:textSize="16sp"
		tools:text="channel 23 (4)"
		android:id="@+id/desc_canal"
		android:ellipsize="end"
		android:layout_below="@+id/nombre_canal"
		android:layout_alignLeft="@+id/nombre_canal"
		android:layout_alignStart="@+id/nombre_canal"
		android:textColor="@android:color/white"
		/>

	<TextView
		android:id="@+id/info_tecnica"
		android:layout_width="104sp"
		android:layout_height="wrap_content"
		android:textAppearance="@style/TextAppearance.AppCompat"
		android:textSize="14sp"
		android:textColor="#afff"
		android:visibility="gone"
		tools:visibility="visible"
		tools:text="UHF\npol.: Horizontal"
		android:layout_alignBottom="@+id/desc_canal"
		android:layout_alignParentRight="true"
		android:layout_alignParentEnd="true"
		/>

</RelativeLayout>