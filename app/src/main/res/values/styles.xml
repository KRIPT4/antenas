<resources xmlns:android="http://schemas.android.com/apk/res/android">

	<style name="AppTheme" parent="Theme.AppCompat">
		<item name="android:windowBackground">@drawable/fondo</item>
		<item name="actionBarStyle">@style/ActionBarPrincipal</item>
	</style>

    <style name="ActionBarPrincipal" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="displayOptions">showHome|useLogo</item>
    </style>

    <style name="TemaMapa" parent="Theme.AppCompat">
        <item name="windowActionBarOverlay">true</item>
        <item name="actionBarStyle">@style/ActionBarMapa</item>
    </style>

	<style name="ActionBarMapa" parent="@style/Widget.AppCompat.ActionBar">
		<item name="background">@drawable/x_ab_solid_dark_holo</item>
		<item name="displayOptions">showHome|useLogo|homeAsUp|showTitle</item>
	</style>

	<style name="AppTheme.Transparent">
		<!-- <item name="android:windowNoTitle">true</item> -->
		<item name="android:windowIsTranslucent">true</item>
		<item name="android:windowBackground">@android:color/transparent</item>
	</style>

</resources>
