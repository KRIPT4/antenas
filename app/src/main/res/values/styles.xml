<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

	<style name="TemaApp" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="colorPrimary">@color/celeste_lindo</item>
		<item name="colorPrimaryDark">@color/celeste_lindo_oscuro</item>
		<item name="colorAccent">#80D8FF</item>
	</style>

	<style name="TemaApp.Antenas">
		<item name="android:windowBackground">@color/celeste_lindo</item>
		<item name="actionBarStyle">@style/ActionBarPrincipal</item>
		<item name="colorFlecha">#fff</item>
		<item name="colorFlechaAlineada">#b2ff59</item>
		<item name="colorDial">@color/celeste_clarito</item>
		<item name="ladoIconoCanal">@dimen/ladoIconoCanal</item>
	</style>

    <style name="ActionBarPrincipal" parent="@style/Widget.AppCompat.Light.ActionBar">
		<item name="displayOptions">showHome</item>
		<item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

	<style name="TemaApp.Antenas.Transparente">
		<!-- <item name="android:windowNoTitle">true</item> -->
		<item name="android:windowIsTranslucent">true</item>
		<item name="android:windowBackground">@android:color/transparent</item>
	</style>

	<style name="TemaPreferencias" parent="Theme.AppCompat.Light.DarkActionBar">
		<item name="colorPrimary">@color/celeste_lindo</item>
		<item name="colorPrimaryDark">@color/celeste_lindo_oscuro</item>
	</style>

	<style name="InfoMapa" parent="ThemeOverlay.AppCompat.Light">
		<item name="android:textAppearanceLarge">@style/textoGrandeInfoMapa</item>
		<item name="android:textAppearanceMedium">@style/textoChicoInfoMapa</item>
		<item name="ladoIconoCanal">@dimen/ladoIconoCanalInfoMapa</item>
	</style>

	<style name="textoGrandeInfoMapa" parent="TextAppearance.AppCompat">
		<item name="android:textSize">@dimen/textoGrandeInfoMapa</item>
	</style>

	<style name="textoChicoInfoMapa" parent="TextAppearance.AppCompat">
		<item name="android:textSize">@dimen/textoChicoInfoMapa</item>
	</style>

	<declare-styleable name="InfoMapa">
		<attr name="ladoIconoCanal" format="dimension"/>
	</declare-styleable>

	<style name="Dialogo" parent="Theme.AppCompat.Dialog">
		<item name="android:colorBackground">@color/celeste_lindo</item>
		<item name="android:background">@color/celeste_lindo</item>
		<item name="android:colorAccent" tools:ignore="NewApi">#FFE57F</item>
	</style>
</resources>
