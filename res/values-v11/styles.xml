<resources>

    <!--
        Base application theme for API 11+. This theme completely replaces
        AppBaseTheme from res/values/styles.xml on API 11+ devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat">
        <!-- API 11 theme customizations can go here. -->
        <item name="actionBarStyle">@style/ActionBarPrincipal</item>
        <item name="android:actionBarStyle">@style/ActionBarPrincipal</item>
    </style>

    <style name="ActionBarPrincipal" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="displayOptions">showHome</item>
        <item name="android:displayOptions">showHome</item>
    </style>

    <style name="TemaMapa" parent="Theme.AppCompat.Light">
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="actionBarStyle">@style/ActionBarMapa</item>
        <item name="android:actionBarStyle">@style/ActionBarMapa</item>
    </style>
</resources>
